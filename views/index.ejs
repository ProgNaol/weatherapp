<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will It Rain?</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .user-profile {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px auto;
            padding: 15px;
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            max-width: 400px;
        }
        .profile-pic {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-right: 15px;
            object-fit: cover;
        }
        .user-info {
            text-align: left;
        }
        .username {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }
        .email {
            font-size: 0.9rem;
            color: var(--text-color);
            opacity: 0.7;
        }
        .logout-link {
            display: inline-block;
            margin-top: 10px;
            color: var(--highlight-color);
            text-decoration: none;
        }
        .logout-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Check if it will rain</h1>

        <!-- User Profile Section -->
        <% if (typeof user !== 'undefined' && user) { %>
            <div class="user-profile">
                <img src="/download.png" alt="Profile Picture" class="profile-pic">
                <div class="user-info">
                    <p class="username"><%= user.email.split('@')[0] %></p>
                    <p class="email"><%= user.email %></p>
                    <a href="/logout" class="logout-link">Logout</a>
                </div>
            </div>
        <% } else { %>
            <div class="login-prompt">
                <p>Please <a href="/login">login</a> to see your profile.</p>
            </div>
        <% } %>

        <form action="/index" method="POST">
            <input type="text" name="city" placeholder="Enter your city" required>
            <select name="choose" required>
                <option value="Today">Today</option>
                <option value="Tomorrow">Tomorrow</option>
                <option value="Day After Tomorrow">Day After Tomorrow</option>
                <option value="In 3 Days">In 3 Days</option>
                <option value="In 4 Days">In 4 Days</option>
            </select>
            <button type="submit">Check Weather</button>
        </form>

        <% if (typeof willRain !== 'undefined') { %>
            <div class="result">
                <% if (willRain) { %>
                    <h1 class="indicator">üåßÔ∏è</h1>
                    <h2>Yes, it will rain on <%= choose %> in <%= city %></h2>
                <% } else { %>
                    <h1 class="indicator">‚òÄÔ∏è</h1>
                    <h2>No, it won't rain on <%= choose %> in <%= city %></h2>
                <% } %>
                <p class="addinfo">Temperature: <%= temperature %>¬∞C</p>
                <p class="addinfo">Cloudiness: <%= clouds %>%</p>
                <p class="addinfo">Latitude: <%= lat %></p>
                <p class="addinfo">Longitude: <%= lon %></p>
                <p class="addinfo">Humidity: <%= humidity %></p>
            </div>
        <% } %>

        <footer class="copyright">
            CopyRight¬© Naol 2024. All rights reserved.
        </footer>
    </div>
</body>
</html>